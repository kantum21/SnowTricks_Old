{% extends 'base.html.twig' %}

{% block title %}SnowTricks !{% endblock %}

{% block body %}
<div class="home_page">
    <p class="header-container">
        <img  class="main_picture" src="{{ asset('jpg/snowtricks.jpg') }}" alt="SnowTricks"/>
        <h1>Welcome on SnowTricks</h1>
    </p>
    <div class="container-fluid">
        <div class="trick_container">
        {% for trick in tricks %}
            <div class="trick">
                <p>
                    <img src="{{ asset('/jpg/') }}{{ trick.mainPicture.picture }}" alt="{{ trick.mainPicture.alt }}"/>
                </p>
                <p>
                    <a href="{{ path('trick_show', { id : trick.id }) }}">{{ trick.name|capitalize }}</a>
                    <a href="#">Edit</a>
                    <a href="#">Delete</a>
                </p>
            </div>
        {% endfor %}
        </div>
        <div class="load-more-btn">
            <a href="#" class="btn btn-primary">Load More</a>
        </div>
    </div>
</div>
{% endblock %}
